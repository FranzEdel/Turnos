@model Turnos.Models.Medico

<h4>Medico</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" class="col s12">
            <div asp-validation-summary="ModelOnly"></div>

            <div class="row">
                <div class="input-field col s6">
                    <i class="material-icons prefix">account_circle</i>
                    <input asp-for="Nombre" type="text" class="validate">
                    <label asp-for="Nombre"></label>
                    <span asp-validation-for="Nombre"></span>
                </div>
                <div class="input-field col s6">
                    <input asp-for="Apellido" type="text" class="validate">
                    <label asp-for="Apellido"></label>
                    <span asp-validation-for="Apellido"></span>
                </div>
            </div>

            <div class="input-field col s12">
                <i class="material-icons prefix">home</i>
                <input asp-for="Direccion" type="text" class="validate">
                <label asp-for="Direccion"></label>
                <span asp-validation-for="Direccion"></span>
            </div>

            <div class="input-field col s12">
                <i class="material-icons prefix">phone</i>
                <input asp-for="Telefono" type="tel" class="validate">
                <label asp-for="Telefono"></label>
                <span asp-validation-for="Telefono"></span>
            </div>

            <div class="input-field col s12">
                <i class="material-icons prefix">email</i>
                <input asp-for="Email" type="email" class="validate">
                <label asp-for="Email"></label>
                <span asp-validation-for="Email"></span>
            </div>

            <div class="row">
                <div class="input-field col s6">
                    <i class="material-icons prefix">event_note</i>
                    <input asp-for="HoraAtencionDesde" type="text" class="timepicker">
                    <label asp-for="HoraAtencionDesde"></label>
                    <span asp-validation-for="HoraAtencionDesde"></span>
                </div>
                <div class="input-field col s6">
                    <i class="material-icons prefix">event_note</i>
                    <input asp-for="HoraAtencionHasta" type="text" class="timepicker">
                    <label asp-for="HoraAtencionHasta"></label>
                    <span asp-validation-for="HoraAtencionHasta"></span>
                </div>
            </div>

            <div class="input-field col s12">
                <i class="material-icons prefix">playlist_add_check</i>
                <select asp-for="IdEspecialidad" asp-items="ViewBag.IdEspecialidad"></select>
            </div>
            <div>
                <button type="submit" class="btn waves-effect waves-light">
                    <i class="material-icons left">send</i>Guardar
                </button>
                <a asp-action="Index" class="waves-effect waves-light red btn">
                    <i class="material-icons left">undo</i>Cancelar
                </a>
            </div>
        </form>
    </div>
</div>
<br>
<br>
