@model Turnos.Models.Especialidad


<h4>¿Estás seguro que quieres eliminar los datos?</h4>
<div>
    <hr />

    <div class="row">
        <div class="col s12 m6">
            <div class="card teal lighten-1">
                <div class="card-content white-text">
                    <span class="card-title">
                        <h4>
                            <b>
                                Especialidad:
                            </b>
                        </h4>
                    </span>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.Descripcion): @Html.DisplayFor(model =>
                        model.Descripcion)
                    </dt>
                </div>
                <div class="card-action teal darken-3">
                    <form asp-action="Delete">
                        <input type="hidden" asp-for="IdEspecialidad" />
                        <input type="submit" value="Eliminar" class="btn waves-effect waves-light" />
                        <a asp-action="Index" class="waves-effect waves-light red btn">Cancelar</a>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
