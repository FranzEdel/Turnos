@model Turnos.Models.Paciente


<h4>¿Estás seguro que quieres eliminar los datos?</h4>
<div>
    <hr />

    <div class="row">
        <div class="col s12 m6">
            <div class="card blue lighten-1">
                <div class="card-content white-text">
                    <span class="card-title">
                        <h4>
                            <b>
                                Paciente:
                                @Html.DisplayFor(model => model.Nombre) @Html.DisplayFor(model => model.Apellido)
                            </b>
                        </h4>
                    </span>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.Direccion): @Html.DisplayFor(model => model.Direccion)
                    </dt>

                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.Telefono): @Html.DisplayFor(model => model.Telefono)
                    </dt>

                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.Email): @Html.DisplayFor(model => model.Email)
                    </dt>

                </div>
                <div class="card-action blue darken-3">
                    <form asp-action="Delete">
                        <input type="hidden" asp-for="IdPaciente" />
                        <input type="submit" value="Eliminar" class="btn waves-effect waves-light" />
                        <a asp-action="Index" class="waves-effect waves-light red btn">Cancelar</a>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
<br>
